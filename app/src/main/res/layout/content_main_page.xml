<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/content_frame"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_page"
    tools:context="com.ina.ina.MainPageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Chart"
        android:textColor="@color/Dark"
        android:textSize="25dp"
        android:id="@+id/textNutrition"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="900dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/idPieChart1"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

            </com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:text="Warnings"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:background="@drawable/textinputborder"
                android:backgroundTint="#FF0000"
                android:layout_marginTop="20dp"
                android:text="Vitamin D less than 100%"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText7"
                android:background="@drawable/textinputborder"
                android:backgroundTint="#FF0000"
                android:layout_marginTop="20dp"
                android:text="Zinc less than 100%"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText8"
                android:background="@drawable/textinputborders2"
                android:backgroundTint="#00FF00"
                android:layout_marginTop="20dp"
                android:text="Calories greater than 100%"
                android:textSize="30dp"/>


        </LinearLayout>



    </ScrollView>




</RelativeLayout>
